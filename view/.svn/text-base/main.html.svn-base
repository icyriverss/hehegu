

<table class="data-load"  border="0" cellspacing="0" cellpadding="0" ><thead>
    <tr class="login_main">
        <th colspan="3" height="100" align="left">
            <span>当前帐号：</span> {$loginid} <a>[修改密码]</a><a>[退出]</a><br>
            <span>操作人：</span> {$user_name} <br>
            <div class="changepassword">
                <span>旧密码：</span><input type="password" name="oldpassword" id="oldpassword" class="input2"><br>
                <span>新密码：</span><input type="password" name="password" id="password" class="input2"><br>
                <span>确认新密码：</span><input type="password" name="repassword" id="repassword" class="input2"><br>
                <span></span><input type="submit" value="确认" class="input-submit">
            </div>
            <span>注册时间：</span> {$regtime}<br>
            <span>所属部门：</span> {$bumen}<br>
            <span>登录次数：</span> {$logintimes}次<br>
            <h4>历史登录记录（最近10次）：</h4>
        </th>

    </tr>
</thead>
<tbody>
    <tr>
        <th width="50">ID</th>
        <th>登录时间</th>
        <th>登录IP</th>
    </tr>
    
    {foreach $list as $id=>$info}<tr class="user_list">
        <td>{$info['id']}</td>
        <td>{$info['logintime']}</td>
        <td>{$info['ip']}</td>
    </tr>{/foreach}
</tbody></table>


