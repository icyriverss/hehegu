<table class="data-load" border="0" cellspacing="0" cellpadding="0" data-min="1200">
    <tr>
        <th colspan="6" style="background: #dedede; border-bottom: 1px solid #ccc; height: 72px; text-align: left; padding-left: 10px;">
            所属部门：<input type="radio" name="bumen" value="" {if !$bumen}checked{/if}> 所有&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="radio" name="bumen" value="store"  {if $bumen=='store'}checked{/if}> 门店&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="radio" name="bumen" value="chejian" {if $bumen=='chejian'}checked{/if}> 加工中心&nbsp;&nbsp;&nbsp;&nbsp;
            <span class="store_list" {if $bumen!='store'}style="display:none;"{/if}>
                <select name="store">
                    <option value="">所有门店</option>
                    {foreach $stores as $k=>$v}
                    <option value="{$v['store_id']}"  {if $storeid==$v['store_id']} selected{/if}>{$v['store_name']}</option>
                    {/foreach}
                </select>
            </span>
            <span class="chejian_list" {if $bumen!='chejian'}style="display:none;"{/if}>
                <select name="chejian">
                    <option value="">所有车间</option>
                    {foreach $chejians as $k=>$v}
                    <option value="{$v['chejian_id']}"  {if $chejianid==$v['chejian_id']} selected{/if}>{$v['chejian_name']}</option>
                    {/foreach}
                </select>
            </span>
            <br>
            订单日期：<input type="text" name="order_date" class="input2" onfocus="WdatePicker()" value="{$order_date}" id="order_date" readonly>&nbsp;&nbsp;&nbsp;&nbsp;
            单据编号：<input type="text" name="order_id" class="input2" value="{$order_id}">&nbsp;&nbsp;&nbsp;&nbsp;
            <a class="city_submit" id="submit_order">搜索</a>
        </th>
    </tr>
    <tr>
        <th width="100">订单类别</th>
        <th class="txtleft">单据编号</th>
        <th width="100">处理状态</th>
        <th width="80">制单人</th>
        <th width="80">制单日期</th>
        <th width="200">操作</th>
    </tr>
    
    {foreach $list as $k=>$v}
        <tr class="datalist">
            <td>{$v['order_name']}</td>
            <td class="txtleft"><a data-id="{$v['order_id']}" data-type="info">{$v['order_id']}</a></td>
            <td>{$v['statusTxt']}</td>
            <td>{$v['user_name']}</td>
            <td>{$v['order_date']}</td>
            <td>{if $v['status']!=0}<a class="submit_order" data-id="{$v['order_id']}" data-type="pass" style="margin-right:10px;">审核</a>{/if}<a class="submit_order" data-id="{$v['order_id']}" data-type="info">详情</a><a class="submit_order" data-id="{$v['order_id']}" style="margin-left:10px;" data-type="del">删除</a></td>
        </tr>
    {/foreach}
    <tr class="showpage">
        <th colspan="9">
        </th></tr>
</table>
